generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum TipoUsuario {
  admin
  cliente
  despachante
  vendedor
}

model Usuario {
  id        String      @id @default(uuid())
  nome      String
  email     String      @unique
  telefone  String?
  senha     String
  tipo      TipoUsuario
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  Veiculo   Veiculo[]

  @@map("agil_usuarios")
}

enum TipoVeiculo {
  carro
  moto
  caminhao
  onibus
  bicicleta
  outros
}

enum Sistema {
  manual
  automatico
  semi_automatico
  cvt
  carburador
  injetado
}

enum Combustivel {
  gasolina
  alcool
  diesel
  el√©trico
  flex
  hibrido
}

model Veiculo {
  id            Int          @id @default(autoincrement())
  nome          String
  descricao     String
  marca         String
  ano           Int
  placa         String       @unique
  valor         Float
  cor           String
  quilometragem Int
  localizacao   String?      @default("Fortaleza")
  vendido       Boolean      @default(false)
  usuarioId     String?
  usuario       Usuario?     @relation(fields: [usuarioId], references: [id])
  tipo          TipoVeiculo
  combustivel   Combustivel? @default(gasolina)
  sistema       Sistema
  imagem        String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@map("agil_veiculos")
}

model Contato {
  id        String   @id @default(uuid())
  nome      String
  email     String   @unique
  telefone  String?
  mensagem  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("agil_contatos")
}
